extends ../layout.jade

block title
  title Authors

block content
  h1 See all the authors!
  a(href="/authors/new") Add a new author
    i.glyphicon.glyphicon-pencil

  each author in authors
    h2 Name/Age - #{author.name}, #{author.age}

    p
      a(href="/authors/#{author.id}") See some more about #{author.name}

    a(href="/authors/#{author.id}/edit", class="btn btn-info") Edit this author

    form(action="/authors/#{author.id}?_method=delete", method="POST")
      input(type="submit" value="Delete this author" class="btn btn-danger")